<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#3E3E42"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#FF0000"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="AccentHoverColor" Color="#4095D4"/>
    <SolidColorBrush x:Key="BorderColor" Color="#555555"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#FFFFFF"/>
    <Style x:Key="ThemedSliderStyle" TargetType="Slider">
        <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
