<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#505050"/>
    <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="AccentHoverColor" Color="#005A9E"/>
    <SolidColorBrush x:Key="BorderColor" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#FFFFFF"/>
    <Style x:Key="ThemedSliderStyle" TargetType="Slider">
        <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
