<Page x:Class="KingVoiceChanger.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">
    <StackPanel Margin="20">
        <Label Content="INPUT DEVICE (MICROPHONE)" Style="{StaticResource HeaderLabelStyle}"/>
        <ComboBox x:Name="InputDeviceComboBox" x:FieldModifier="public" Style="{StaticResource ThemedComboBoxStyle}" Margin="0,5,0,15"/>

        <Label Content="OUTPUT DEVICE (SPEAKERS)" Style="{StaticResource HeaderLabelStyle}"/>
        <ComboBox x:Name="OutputDeviceComboBox" x:FieldModifier="public" Style="{StaticResource ThemedComboBoxStyle}" Margin="0,5,0,15"/>
    </StackPanel>
</Page>
